<table id="inspections" class="generic_datatable datatable display table table-striped table-bordered" >
  <caption><h3><%= "Inspections" %></h3></caption>
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= link_to inspection.inspection_date, inspection_path(inspection) %></td>
      	<td>
          <span class="badge <%= 'badge-success' if inspection.status == 'Complete - Passed' %>">
            <%= inspection.status %>
          </span>
        </td>
      	<td><%= link_to 'Edit', edit_inspection_path(inspection),
                :class => 'btn btn-mini btn-primary' unless cannot? :edit, inspection %></td>
      </tr>
    <% end %>
  </tbody>
</table>
