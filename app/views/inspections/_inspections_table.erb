<table id="item_inspections" class="datatable table table-striped table-bordered" >
  <caption><h3><%= "Inspections" %></h3></caption>
  <thead>
    <tr>
      <th>Date</th>
      <th>Status</th>
      <th>Inspector</th>
      <th>Comments</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @item.inspections.each do |inspection| %>
      <tr>
        <td><%= link_to format_datetime_value(inspection.inspection_date), inspection %></td>
        <td><%= inspection_status_label(inspection) %></td>
        <% if inspection.person %>
          <td><%= link_to inspection.person.fullname, person_path(inspection.person) %></td>
        <% else %>
          <td>Unassigned</td>
        <% end %>
        <td><%= truncate(inspection.comments) %></td>
        <td><%= table_button_link 'Edit', edit_inspection_path(inspection) if can? :edit, inspection %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<p>
  Created <%= @item_category.created_at %><br/>
Last Modified <%= @item_category.updated_at %><br/> 
Last Editor <%= @last_editor %> 
</p>