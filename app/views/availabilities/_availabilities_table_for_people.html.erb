<table id="availabilities" class="generic_datatable table table-striped table-bordered">
  <thead>
    <tr>
      <th>Status</th>
      <th>Start time</th>
      <th>End Time</th>
      <th>Description</th>
    </tr>
  </thead>
  <tbody>
    <% availabilities.each do |a| %>
    <tr <%== availability_status_class(a) %> >
        <td><%= link_to availability_status_label(a), availability_path(a) %></td>
        <td><%= a.start_time %></td>
        <td><%= a.end_time %></td>
        <td><%= truncate(a.description, length: 24) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
