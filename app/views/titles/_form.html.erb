<%= simple_form_for(@title) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :skills, hint: 'Multiple select - Use CTRL key' %>
    <%= f.input :status, :as => :select, :collection => ['Active', 'Inactive'] %>
    <%= f.input :description %>
    <%= f.input :comments %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
