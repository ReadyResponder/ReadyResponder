<% content_for :sidebar do %>
  <%= sidebar_button_link 'Return to Listing', channels_path %>
  <%#= sidebar_button_link 'Edit Channel', edit_channel_path(@channel) unless cannot? :edit, @channel %>
  <%#= sidebar_button_link 'New Channel', new_person_channel_path(@channel.person) unless cannot? :create, Channel %>
<% end %>

<p>
  <h2><%= @channel.person.fullname %>  <%= @channel.name %></h2>
</p>

<p>
  <%= @channel.content %>
</p>

<p>
  <b>Priority:</b>
  <%= @channel.priority %>
</p>

<p>
  <b>Category:</b>
  <%= @channel.category %>
</p>

<p>
  <b>Carrier:</b>
  <%= @channel.carrier %>
</p>

<p>
  <b>Last verified:</b>
  <%= @channel.last_verified %>
</p>

<p>
  <b>Usage:</b>
  <%= @channel.usage %>
</p>

