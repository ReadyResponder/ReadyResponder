<%= simple_form_for(@item_category) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :status, :as => :select, :collection => ["Active", "Inactive"] %>
    <%= f.input :description, :as => :text %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
