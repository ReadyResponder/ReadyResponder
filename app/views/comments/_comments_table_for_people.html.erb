<% if comments.any? %>
  <table id="comments" class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
      </tr>
    </thead>
    <tbody>
      <% comments.each do |comment| %>
        <tr>
          <td><%= comment.title %></td>
          <td><%= comment.description %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  'No comments yet!'
<% end %>
