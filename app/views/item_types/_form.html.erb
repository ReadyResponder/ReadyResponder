<%= simple_form_for(@item_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :item_category %>
    <%= f.input :name %>
    <%= f.input :status, :as => :select, :collection => ["Active", "Inactive"] %>
    <%= f.file_field :item_type_image %>
    <%= f.input :description, :as => :text %>
    <%#= f.input :is_groupable, as: :boolean %>
    <%#= f.input :is_a_group, as: :boolean %>
    <%#= f.input :parent_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<p>
  Created <%= @item_category.created_at %><br/>
Last Modified <%= @item_category.updated_at %><br/> 
Last Editor <%= @last_editor %> 
</p>