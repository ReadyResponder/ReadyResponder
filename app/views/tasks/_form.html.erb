<%= simple_form_for([@event, @task]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :priority, as: :select, collection: Task::PRIORITIES %>
    <%= f.input :status, :as => :select, :collection => ['Active', 'Cancelled'] %>
    <%= f.input :description %>
    <%= f.input :location %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :zipcode %>
    <%= f.input :latitude %>
    <%= f.input :longitude %>
    <%= f.input :start_time, as: :string,
                             input_html: { class: 'datetimepicker', size: 11,
                               value: format_datetime_value(f.object.start_time ? f.object.start_time : @event.start_time) } %>
    <%= f.input :end_time, as: :string,
                             input_html: { class: 'datetimepicker', size: 11,
                               value: format_datetime_value(f.object.end_time ? f.object.end_time : @event.end_time) } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<p>
  Created <%= @item_category.created_at %><br/>
Last Modified <%= @item_category.updated_at %><br/> 
Last Editor <%= @last_editor %> 
</p>