<h1> Edit <%= @vendor.name  %> </h1>
<%= simple_form_for @vendor do |f| %>
<%= f.error_notification %>

  <%= hidden_field_tag :next, params[:next] %>

  <%= f.input :name %>
  <%= f.label :status %>
  <br>
  <%= f.select :status, ["Active", "Inactive"] =%>
  <%= f.input :street %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :zipcode %>
  <%= f.input :comments %>

  <%= f.button :submit %>
<% end %>
